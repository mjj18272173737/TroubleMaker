<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kandashan.admin.dao.IUserDao">
    
    <resultMap id="userMap" type="com.kandashan.admin.entity.User">
        <id property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="password" column="password"/>
        <result property="realName" column="real_name"/>
        <result property="isValid" column="is_valid"/>
        <result property="loginDate" column="login_date"/>
        <result property="createDate" column="create_date"/>
        <result property="modifyDate" column="modify_date"/>
    </resultMap>
    
    <select id="getUserById" parameterType="int" resultMap="userMap">
      SELECT * FROM xx_user WHERE user_id=#{userId}
    </select>

    <select id="getUser" resultMap="userMap">
      SELECT * FROM xx_user
    </select>

    <insert id="addUser" parameterType="com.kandashan.admin.entity.User"  useGeneratedKeys="true" >
        INSERT INTO xx_user (user_name,password, create_date) VALUE (#{userName},#{password}, #{createDate})
    </insert>
    
    <select id="login" resultMap="userMap">
        SELECT * FROM xx_user WHERE user_name=#{userName} AND password=#{password}
    </select>
    
    <update id="update" parameterType="com.kandashan.admin.entity.User">
        UPDATE xx_user
        <set>
            <if test="userName != null">
                user_name=#{userName},
            </if>
            <if test="password != null">
                password=#{password},
            </if>
            <if test="realName != null">
                real_name=#{realName},
            </if>
            <if test="isValid != null">
                is_valid=#{isValid},
            </if>
            <if test="loginDate != null">
                login_date=#{loginDate},
            </if>
            <if test="createDate != null">
                create_date=#{createDate},
            </if>
            <if test="modifyDate != null">
                modify_date=#{modifyDate}
            </if>
        </set>
        WHERE user_id=#{userId}
    </update>
</mapper>

